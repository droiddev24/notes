<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="example.com.notes">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true">
        <activity android:name=".view.activities.SplashActivity"
            android:theme="@style/ToolbarTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.activities.ListNotesActivity"
            android:theme="@style/ToolbarTheme"/>
        <activity android:name=".view.activities.AddNoteActivity"
            android:theme="@style/ActionBarTheme"/>
        <activity android:name=".view.activities.NoteDetailsActivity"
            android:theme="@style/ToolbarTheme"/>
    </application>

</manifest>